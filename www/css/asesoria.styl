@import 'styl/font.styl'
@import 'styl/normalize.styl'
@import 'styl/header.styl'
@import 'styl/footer.styl'

#form_info_personal
    padding 15px

    p
        color #aaa
        font-size 18px
        font-style italic

#asesoria-exitosa .logo h2
    font-weight: normal;
    font-size: 32px;
    font-style: italic;
    line-height: 40px;
    position: absolute;
    left: 15%;
    top: 50%;
    right: 50%;
    height: 80px;
    margin: 0;
    margin-top: -40px;
    color: #C1D82F;
    text-align: left;

#asesoria-exitosa .logo
    height: 150px;
    background: #fff;
    text-align: right;
    line-height: 150px;
    position: relative

#asesoria-exitosa .logo img
    width: auto;
    height: auto;
    max-width: 100%;
    max-height: 100%;
    vertical-align: middle;

#asesoria-exitosa .respuesta
    padding: 0 25px;
    padding-bottom 25px;

#asesoria-exitosa .respuesta h1
    text-align: center;
    font-style: italic;
    font-weight: normal;
    line-height: 32px;
    font-size: 25px;
    margin: 20px 0 0 0;

