@import 'styl/font.styl'
@import 'styl/normalize.styl'
@import 'styl/header.styl'
@import 'styl/footer.styl'

#map-canvas
    height 100%
    z-index 10


.info-window
    padding: 20px;
    max-width: 250px;

    h2
        font-weight: normal;
        margin: 0;
        font-size: 15px;
        color: #00a5e5;

    h1
        font-weight: bold;
        margin: 0;
        font-size: 20px;
        color: #00a5e5; 
        margin-bottom: 10px;
    
    h3
        font-weight: normal;
        margin: 0;
        font-size: 16px;
        color: #666;
        margin-bottom: 10px;

    div.info1
        font-size: 15px;
        line-height: 20px;
        margin-bottom: 5px;

        span
            font-weight: bold;

    div.btns
        text-align: center;
        padding: 5px 0;

        .boton
            margin: 0 10px;

#filtro,
#window_puntuacion
    .ui-content
        padding 20px

#message-txt
    display block
    font-size 16px
    line-height 16px
    color #666
    left 0
    bottom 0
    position absolute
    z-index 50
    background #fff
    padding 10px

.message-window
    position: absolute;
    bottom: 5px;
    left: 5px;
    right: 5px;
    z-index: 50;
    background: #fff;
    padding: 10px 20px;
    text-align: left;
    border 1px solid #ccc

    >div
        position relative

    label
        display block
        font-size 16px
        line-height 30px
        height 30px
        padding-bottom 10px
        color #666

    select
        background: #fefefe;
        border 1px solid #aaa
        font-size 16px
        line-height 16px
        padding 5px 10px
        text-align: center;
        width 100%
        -webkit-box-sizing border-box
        -moz-box-sizing border-box
        box-sizing border-box

.my_pos
    position absolute
    display block
    top 50px
    right 5px
    background: #1a3c8f;
    padding: 10px;
    border 1px solid #12317f
    border-radius 2px
    font-size 14px
    cursor pointer
    text-align center
    z-index 40

    img
        height 20px

.my_pos:hover, .my_pos:active
    background #1a4990


.btn-city
    position absolute
    display block
    top 65px
    right 10px
    z-index 40

    >div
        position relative
    
    button
        background: #1a3c8f;
        padding: 10px;
        border 1px solid #12317f
        border-radius 2px
        font-size 14px
        cursor pointer
        text-align center
        position relative
        z-index 10

        img
            height 20px

    button:hover, button:active
        background #1a4990

select
    position absolute
    opacity 1
    z-index 12
    top 5px
    right 5px
    padding 10px 15px
    /*width 42px*/
    /*height 45px*/


.centered
    bottom 40%
    padding 30px 20px

    .my_pos
        display none

    select
        font-size 20px
        line-height 20px