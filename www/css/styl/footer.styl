.footer
    background #1A4990
    border-top 1px solid #12317F

    position: fixed;
    z-index: 100;
    left 0
	right 0
	height 50px
    box-sizing: border-box;

.footer a
    display: block;
    width: 25%;
    height: 100%;
    border: 1px solid #12317F;

    text-align: center
    float: left
    position: relative
    text-decoration: none;
    text-shadow: none;
    box-shadow: none;

    box-sizing: border-box;

.footer>div
    height: 100%;


.footer a span
    display: inline-block;
    margin-top: 10px;
    background: transparent url('../img/sprite.png') no-repeat 0 0;

